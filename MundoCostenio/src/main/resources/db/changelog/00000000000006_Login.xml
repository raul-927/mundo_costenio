<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>
        
    <changeSet id="00000000000006" author="rhernandez">
    
        <createTable tableName="user">
            <column name="user_id" 			type="int" autoIncrement="true">
                <constraints primaryKey="true" 	nullable="false"/>
            </column>
            <column name="nic" 		 	 	 type="varchar(10)"/>
            <column name="password" 		 type="varchar(20)"/>
            <column name="enabled" 			 type="boolean"/>
        </createTable>
        
        <createTable tableName="rol">
            <column name="rol_id" 			type="int" autoIncrement="true">
                <constraints primaryKey="true" 	nullable="false"/>
            </column>
            <column name="rol_name"		type="enum('ADMIN','USER', 'COUNTER', 'SALES','GUESS','ANONIMOUS','MARKETING','RRHH','PROMOUTION','CONFIG')"/>
        </createTable>
        
        <createTable tableName="user_rol">
            <column name="user_rol_id" 			type="int" autoIncrement="true">
                <constraints primaryKey="true" 	nullable="false"/>
            </column>
            <column name="user_id"		type="int"/>
             <column name="rol_id"		type="int"/>
        </createTable>
        
        <addForeignKeyConstraint  baseColumnNames="user_id"  
            baseTableName="persona"  
            constraintName="fk_persona_user"
            onDelete="CASCADE"  
            onUpdate="RESTRICT"  
            referencedColumnNames="user_id"
            referencedTableName="user"   
            validate="true"/>
        
         <addForeignKeyConstraint  baseColumnNames="user_id"  
            baseTableName="user_rol"  
            constraintName="fk_user_rol_user"
            onDelete="CASCADE"  
            onUpdate="RESTRICT"  
            referencedColumnNames="user_id"
            referencedTableName="user"   
            validate="true"/>
            
         <addForeignKeyConstraint  baseColumnNames="rol_id"  
            baseTableName="user_rol"  
            constraintName="fk_rol_user_rol"
            onDelete="CASCADE"  
            onUpdate="RESTRICT"  
            referencedColumnNames="rol_id"
            referencedTableName="rol"   
            validate="true"/>
            
         <addUniqueConstraint 
            columnNames="rol_name"  
            deferrable="true"  
            disabled="true" 
            initiallyDeferred="true"    
            tableName="rol"    
            validate="true"/>
        
        <addUniqueConstraint 
            columnNames="nic"  
            deferrable="true"  
            disabled="true" 
            initiallyDeferred="true"    
            tableName="user"    
            validate="true"/>
    </changeSet>
</databaseChangeLog>
